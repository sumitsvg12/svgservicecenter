<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Customers</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <%- include("../user/dashboard") %>
          <div class="container mt-10">
            <div class="cards">
              <div class="d-flex justify-content-between align-items-center">
                <h2 class="card-titles mb-2">View Customer</h2>
              </div>
              <form method="get" class="form-inline mb-3">
                <input type="text" name="search" value="" class="form-control" placeholder="Search GSK Users">
                <button type="submit" class="btn btn-primary">Search</button>
              </form>
              <div class="table-responsive">
                <a href="/customers/useraddcustomer">Add New Customer</a>
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>S NO</th>
                      <th>Full Name</th>
                      <th>Email</th>
                      <th>City</th>
                      <th>Mobile</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% customers.forEach(customer=> { %>
                      <tr>
                        <td>
                          <%=customer.id%>
                        </td>
                        <td>
                          <%= customer.full_name %>
                        </td>
                        <td>
                          <%= customer.email %>
                        </td>
                        <td>
                          <%= customer.city %>
                        </td>
                        <td>
                          <%= customer.mobile %>
                        </td>

                        <td>
                          <a href="/customers/usercustomers/edit/<%= customer._id %>" class="btn btn-warning">Edit</a> |
                          <form action="/customers/usercustomers/delete/<%= customer._id %>" method="POST"
                            style="display:inline;" class="btn btn-danger "
                            onclick="return confirm('Are you sure you want to delete this customer?');">
                            <button type="submit">Delete</button>
                          </form>
                        </td>
                      </tr>
                      <%})%>
                  </tbody>
                </table>
              </div>

              <nav>
                <ul class="pagination">
                  <!-- Previous Page -->


                  <!-- Always Show First Page -->
                  <li class="page-item active">
                    <a class="page-link" href="?page=1">1</a>
                  </li>

                  <!-- Ellipsis Before Nearby Pages -->


                  <!-- Nearby Pages -->




                  <!-- Ellipsis After Nearby Pages -->


                  <!-- Always Show Last Page -->


                  <!-- Next Page -->

                </ul>
              </nav>

            </div>
          </div>

        </div>


        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.2/moment.min.js"></script>
        <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
        <script
          src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
        <script src="https://cdn.datatables.net/2.2.2/js/dataTables.bootstrap5.js"></script>
        <script src="https://cdn.datatables.net/buttons/3.2.2/js/dataTables.buttons.js"></script>
        <script src="https://cdn.datatables.net/buttons/3.2.2/js/buttons.dataTables.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
        <script src="https://cdn.datatables.net/buttons/3.2.2/js/buttons.html5.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/3.2.2/js/buttons.print.min.js"></script>
</body>

</html>