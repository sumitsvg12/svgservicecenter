
    <%- include("../user/dashboard") %>
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="container mt-10">

                    <div class="cards">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="card-titles mb-2">Edit Billing</h2>
                        </div>
                        <div class="card-body">
                            <!-- Messages -->
                            <form action="/billing/userupdatebilling" method="POST" enctype="multipart/form-data">
                                <input type="hidden" value="<%= billing._id %>" id="id" name="billingid">
                                <div class="row">
                                    <!-- Customer Dropdown -->
                                    <div class="form-group col-md-6">
                                        <label for="customer">Customer </label>
                                        <select id="customer" name="customer"
                                            class="form-select form-control bg-dark text-white border-secondary">
                                            <option value="<%= billing.customer %>">
                                                <%= billing.customer %>
                                            </option>
                                        </select>
                                    </div>
                                    <!-- Service Dropdown -->
                                    <div class="form-group col-md-6">
                                        <label for="service">Service Name</label>
                                        <input type="text" id="service" name="ServiceName" class="form-control"
                                            value="<%= billing.ServiceName %>">
                                    </div>
                                    <!-- File Upload Fields -->
                                    <div class="form-group col-md-6">
                                        <label for="id_proof">ID Proof </label>
                                        <input type="file" id="id_proof" name="id_proof" class="form-control">
                                        <img src="/uploads/billing_docs/<%= billing.id_proof %>" width="100">
                                    </div>
            
                                    <div class="form-group col-md-6">
                                        <label for="address_proof">Address Proof </label>
                                        <input type="file" id="address_proof" name="address_proof" class="form-control">
                                        <img src="/uploads/billing_docs/<%= billing.address_proof %>" width="100">
                                    </div>
            
                                    <div class="form-group col-md-6">
                                        <label for="pan_card">PAN Card</label>
                                        <input type="text" id="pan_card" name="pan_card" class="form-control"
                                            value="<%= billing.pan_card %>">
                                    </div>
            
                                    <div class="form-group col-md-6">
                                        <label for="banking">Banking</label>
                                        <input type="file" id="banking" name="banking" class="form-control">
                                        <img src="/uploads/billing_docs/<%= billing.banking %>" width="100">
                                    </div>
            
                                    <div class="form-group col-md-6">
                                        <label for="photo">Photo (Passport Size)</label>
                                        <input type="file" id="photo" name="photo" class="form-control">
                                        <img src="/uploads/billing_docs/<%= billing.photo %>" width="100">
                                    </div>
            
                                    <div class="form-group col-md-6">
                                        <label for="others">Other Documents</label>
                                        <input type="file" id="others" name="others" class="form-control" multiple>
                                        <% billing.others.forEach(file=> { %>
                                            <img src="/uploads/billing_docs/<%= file %>" width="100">
                                            <% }) %>
                                             
                                    </div>
                                    <!-- Submit Button -->
                                    <div class="form-group mt-3">
                                        <button type="submit" class="btn btn-primary btn-block">Add Service Billing</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
