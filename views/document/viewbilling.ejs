                                                            onchange="this.form.submit()">
                                                            <option value="Pending" <%=v.paymentStatus==='Pending'
                                                                ? 'selected' : '' %>>Pending</option>
                                                            <option value="Paid" <%=v.paymentStatus==='Paid'
                                                                ? 'selected' : '' %>>Paid</option>
                                                        </select>
                                                    </form>
                                                </td>

                                            </tr>
                                            <%})%>
                                    </tbody>
                                </table>
